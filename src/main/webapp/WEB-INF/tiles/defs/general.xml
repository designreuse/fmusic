<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<definition name="layout.main" template="/WEB-INF/views/shared/layout/_MainLayout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/shared/layout/_MainHeader.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/shared/layout/_MainFooter.jsp" />
		<put-list-attribute name="stylesheets">
			<add-attribute value="/static/css/home/bootstrap.min.css" />
			<add-attribute value="/static/font-awesome/css/font-awesome.css" />
			<add-attribute value="/static/css/main.css" />
			<add-attribute value="/static/css/responsive.css" />
			<add-attribute value="/static/css/htfstyle.css" />
			<add-attribute value="/static/css/home/login-modal.css" />
		</put-list-attribute>
		<put-list-attribute name="javascripts">
			<add-attribute value="/static/js/scripts.js" />
			<add-attribute value="/static/js/login-modal.js" />
		</put-list-attribute>
	</definition>

	<definition name="home/index" extends="layout.main">
		<put-attribute name="title" value="HomePage | FMusic" />
		<put-attribute name="body" value="/WEB-INF/views/home/index.jsp" />
		<put-attribute name="bodyClass" value="index" />
		<put-attribute name="current" value="home" cascade="true" />
		<put-list-attribute name="stylesheets" inherit="true">
			<add-attribute value="/static/css/image-slider/image-slider.css" />
		</put-list-attribute>
		<put-list-attribute name="javascripts" inherit="true">
			<add-attribute value="/static/js/jquery.flexslider.min.js" />
			<add-attribute value="/static/js/image-slider/image-slider.js" />
			<add-attribute value="/static/js/image-slider/jssor.slider.mini.js" />
		</put-list-attribute>
	</definition>

	<definition name="account/register" extends="layout.main">
		<put-attribute name="bodyClass" value="fmusic gray-bg" />
		<put-attribute name="title" value="Register  | FMusic" />
		<put-attribute name="body" value="/WEB-INF/views/account/register.jsp" />
		<put-attribute name="current" value="" cascade="true" />
		<put-list-attribute name="javascripts" inherit="true">
			<add-attribute value="/static/js/plugins/validate/jquery.validate.min.js" />
		</put-list-attribute>
	</definition>

	<definition name="account/login" extends="layout.main">
		<put-attribute name="bodyClass" value="fmusic gray-bg" />
		<put-attribute name="title" value="Login | FMusic" />
		<put-attribute name="body" value="/WEB-INF/views/account/login.jsp" />
		<put-attribute name="current" value="" cascade="true" />
	</definition>

</tiles-definitions>